{% extends "EditionistaWebsiteBundle::layout.html.twig" %}

{% block breadcrumbs %}
    <li><a href="{{ path('home') }}"><i class="icon-home"></i> Home</a> <span class="divider">/</span></li>
    <li><a href="{{ path('version') }}">Versions</a> <span class="divider">/</span></li>
    <li><a href="{{ path('version_show', {'id': entity.id }) }}">{{ entity.name }}</a> <span class="divider">/</span></li>
    <li class="active">Edit</li>
    
{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12 well">
        <h1>
            Edit <span class="muted">&ldquo;</span> {{ entity.name }} <span class="muted">&rdquo;</span>
            <small>
                <a href="{{ path('version_delete', { 'id': entity.id }) }}"><i class="icon-trash icon-muted icon-muted-hover"  data-placement="top" rel="tooltip" data-original-title="Delete"></i></a>
            </small>
        </h1>

        <form action="{{ path('version_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
                <button class="btn btn-success" type="submit">Done</button>
                <a class="btn" href="{{ path('version') }}">Cancel</a>
        </form>
    </div>
</div>
{% endblock %}