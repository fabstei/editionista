{% extends "EditionistaWebsiteBundle::layout.html.twig" %}

{% block breadcrumbs %}
    <li><a href="{{ path('home') }}"><i class="icon-home"></i> Home</a> <span class="divider">/</span></li>
    <li class="active">Tags</li>
{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <h1>Tags</h1>
        <p>List of all used tags</p>
        <p class="well space">
            {%- for tag in tags -%}
                {% if not loop.first %}, {% endif %}
                <a href="{{ path('show_tag', { 'tag': tag.name })}}">{{ tag.name }}</a>
            {%- endfor -%}
        </p>
    </div>
</div>
{% endblock %}
